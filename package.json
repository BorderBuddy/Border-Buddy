{
  "name": "BorderBuddy",
  "version": "0.0.1",
  "description": "Your Border Buddy",
  "main": "index.js",
  "scripts": {
    "test-local": "NODE_ENV=test LOCAL=1 ./run-tests.sh",
    "worker": "babel-node cron",
    "push:acceptance": "cf push -f manifest.acceptance.yml",
    "push:production": "cf push -f manifest.production.yml",
    "build-client": "lerna run --scope client build",
    "build-api": "lerna run --scope api build",
    "copy-assets": "cp -R ./packages/client/dist/* ./packages/api/dist/public && cp -R ./packages/client/dist/* ./packages/api/src/public",
    "build": "lerna bootstrap && npm run build-client && npm run build-api && npm run copy-assets",
    "dev": "lerna bootstrap && lerna run dev --stream --parallel"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EmilyDev/Hack-The-Ban.git"
  },
  "keywords": [
    "hacktheban"
  ],
  "author": "emilyho",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EmilyDev/Hack-The-Ban.git"
  },
  "jest": {
    "globals": {
      "window": true
    },
    "testEnvironment": "jsdom",
    "testURL": "http://localhost"
  },
  "homepage": "https://github.com/EmilyDev/Hack-The-Ban.git",
  "dependencies": {
    "lerna": "^3.22.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "eslint": "^7.1.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-standard": "^4.0.1",
    "typescript": "^3.9.3"
  }
}
